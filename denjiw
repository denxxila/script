local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Title.InputBegan:Connect(function(input) 
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
    end
end)
Title.InputChanged:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end end)
UserInputService.InputChanged:Connect(function(input) if input == dragInput and dragging then update(input) end end)

-- --- LOGIC PERGERAKAN ---
local radius = 30
local rotationSpeed = 5 -- Kecepatan sedang, tidak terlalu agresif
local attractionStrength = 300
local ringPartsEnabled = false

-- Batas toleransi jarak untuk mulai mengontrol part
-- Part hanya akan diambil jika jaraknya: radius + 20 studs
local captureRangeBuffer = 20 

local function RetainPart(Part)
    if Part:IsA("BasePart") and not Part.Anchored and Part:IsDescendantOf(workspace) then
        if Part.Parent == LocalPlayer.Character or Part:IsDescendantOf(LocalPlayer.Character) then
            return false
        end
        Part.CustomPhysicalProperties = PhysicalProperties.new(0, 0, 0, 0, 0)
        Part.CanCollide = false
        return true
    end
    return false
end

local parts = {}
local function addPart(part)
    if RetainPart(part) then
        if not table.find(parts, part) then
            table.insert(parts, part)
        end
    end
end

local function removePart(part)
    local index = table.find(parts, part)
    if index then
        table.remove(parts, index)
    end
end

for _, part in pairs(workspace:GetDescendants()) do
    addPart(part)
end

workspace.DescendantAdded:Connect(addPart)
workspace.DescendantRemoving:Connect(removePart)

RunService.Heartbeat:Connect(function()
    if not ringPartsEnabled then return end
    
    local humanoidRootPart = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    
    if humanoidRootPart then
        local center = humanoidRootPart.Position
        local timeTick = os.clock() * rotationSpeed
        
        for i, part in pairs(parts) do
            if part.Parent and not part.Anchored then
                
                -- Hitung jarak part ke pemain
                local distance = (part.Position - center).Magnitude
                
                -- LOGIKA UTAMA:
                -- Hanya kontrol part jika berada di dekat pemain (Radius + Buffer)
                -- Jika part jauh, kita biarkan saja (jangan ditarik paksa)
                
                if distance <= (radius + captureRangeBuffer) then
                    
                    local angle = timeTick + (i * 0.5)
                    
                    -- Target posisi orbit
                    local tx = math.cos(angle) * radius
                    local tz = math.sin(angle) * radius
                    local targetPos = Vector3.new(center.X + tx, center.Y, center.Z + tz)
                    
                    -- Pindahkan part dengan velocity
                    part.Velocity = (targetPos - part.Position) * 15 -- Strength lebih rendah agar tidak glitchy
                    part.AssemblyLinearVelocity = part.Velocity
                    
                    -- Rotasi
                    part.CFrame = CFrame.new(part.Position, center)
                    
                else
                    -- Jika part diluar jangkauan, JANGAN lakukan apa-apa.
                    -- Biarkan physics engine Roblox menanganinya (jatuh ke tanah atau diam).
                end
            end
        end
    end
end)

-- Button Events
ToggleButton.MouseButton1Click:Connect(function()
    ringPartsEnabled = not ringPartsEnabled
    
    if ringPartsEnabled then
        ToggleButton.Text = "NYALA"
        ToggleButton.BackgroundColor3 = Theme.OnButtonBg
    else
        ToggleButton.Text = "MATI"
        ToggleButton.BackgroundColor3 = Theme.OffButtonBg
    end
    playSound("12221967")
end)

DecreaseRadius.MouseButton1Click:Connect(function()
    radius = math.max(5, radius - 5)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

IncreaseRadius.MouseButton1Click:Connect(function()
    radius = math.min(500, radius + 5)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

local minimized = false
MinimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        MainFrame:TweenSize(UDim2.new(0, 320, 0, 45), "Out", "Quad", 0.3, true)
        MinimizeButton.Text = "+"
        ToggleButton.Visible = false
        RadiusFrame.Visible = false
        Watermark.Visible = false
    else
        MainFrame:TweenSize(UDim2.new(0, 320, 0, 250), "Out", "Quad", 0.3, true)
        MinimizeButton.Text = "-"
        task.wait(0.2)
        ToggleButton.Visible = true
        RadiusFrame.Visible = true
        Watermark.Visible = true
    end
    playSound("12221967")
end)

-- Notifikasi
pcall(function()
    StarterGui:SetCore("SendNotification", {
        Title = "Super Ring Parts",
        Text = "Mode Halus: Part hanya bergerak jika didekati.",
        Duration = 5
    })
end)